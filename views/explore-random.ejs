<section class="exploreCategories">
    <div class="section-header">
        <h2>Explore Random</h2>
    </div>
    <div class="categories">

        <% if(food !='' ) { %>
                <div class="category-link">
                    <a href="/foods/<%= food._id %>">
                        <div class="category-image category-image-large">
                            <img src="/<%= food.image %>" alt="<%= food.name %>" loading="lazy">
                        </div>
                        <div class="title">
                            <%= food.name %>
                        </div>
                    </a>
                </div>
                    <% } else { %>
                        <p>No Items Found</p>
                    <% } %>
    </div>
</section>