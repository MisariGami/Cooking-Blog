                                <img src="/<%= item.image %>" alt="<%= item.name %>" loading="lazy">
                            </div>
                            <div class="title">
                                <%= item.name %>
                            </div>
                        </a>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <p>No Items Found</p>
                            <% } %>
        </div>
    </section>


    <!-- Indian -->
